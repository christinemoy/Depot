

<div id="cart_title">Your Cart</div>
<table>
	<%= render(@cart.line_items) %>

	<tr id="total_line">
		<td colspan="2">Total</td>
		<td id="total_cell"><%= number_to_currency(@cart.total_price) %></td>
	</tr>
</table>
<tr> 
	<td id="links"> <%= link_to "CHECKOUT /", new_order_path, method: :get %></td>
	<td id="links"> <%= link_to '/ EMPTY CART', @cart, method: :delete, confirm: 'Are you sure?' %></td>
</tr>
